<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_video_youtube"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="@drawable/bg_white_corner_16dp_grey_border">

    <TextView
        android:id="@+id/txtVideoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:text="Always remember us this way"
        android:textColor="@color/shadow_color"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lady Gaga"
        android:textStyle="italic"
        android:layout_below="@id/txtVideoName"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/img_play"/>



</RelativeLayout>