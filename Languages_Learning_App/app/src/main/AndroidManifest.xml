<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.languages_learning_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Languages_Learning_App">

        <activity android:name=".Views.GeneralPlayVideoActivity"></activity>
        <activity android:name=".Views.Trainee.TraineeDetailProfileActivity"></activity>
        <activity android:name=".Views.Trainee.TraineeTranslateActivity" />
        <activity android:name=".Views.Trainee.TraineeSongActivity" />
        <activity android:name=".Views.Trainee.TraineeRankActivity" />
        <activity android:name=".Views.Trainee.TraineeWritingTestActivity" />
        <activity android:name=".Views.Trainee.TraineeAudioTestActivity" />
        <activity android:name=".Views.Trainee.TraineeSelectionTestActivity" />
        <activity android:name=".Views.Trainee.TraineePracticeActivity" />
        <activity android:name=".Views.Trainee.TraineeVocabularyActivity" />
        <activity android:name=".Views.Manager.ManagerVocabularyActivity" />
        <activity android:name=".Views.Manager.ManagerPracticeActivity" />
        <activity android:name=".Views.Manager.ManagerMainActivity" />
        <activity android:name=".Views.GeneralChangePasswordActivity" />
        <activity android:name=".Views.Admin.AdminMainActivity" />
        <activity android:name=".Views.Trainee.TraineeMainActivity" />
        <activity android:name=".Views.GeneralFogotPasswordActivity" />
        <activity android:name=".Views.GeneralProfileActivity" />
        <activity android:name=".Views.GeneralRegisterUserActivity" />
        <activity android:name=".Views.GeneralChooseLanguageActivity" />
        <activity android:name=".Views.GeneralLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>